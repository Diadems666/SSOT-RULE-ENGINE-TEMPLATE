{
    "mcpServers": {
      "memory": {
        "command": "node",
        "args": [
          "./.cursor/CORE/MCP/mcp-knowledge-graph/dist/index.js",
          "--memory-path",
          "./.cursor/CORE/MEMORY/memory.jsonl",
          "--log-level",
          "info",
          "--auto-backup",
          "true",
          "--backup-interval",
          "3600",
          "--backup-dir",
          "C:/MCP-SERVERS/memory-backups"
        ],
        "env": {
          "NODE_ENV": "production",
          "MCP_SERVER_PORT": "3100",
          "MCP_MAX_ENTITIES": "1000",
          "MCP_ENABLE_COMPRESSION": "true"
        },
        "autoRestart": true,
        "maxRestartAttempts": 5,
        "restartDelay": 3000
      },
      "sequential-thinking": {
        "command": "node",
        "args": [
          "./.cursor/CORE/MCP/sequential-thinking/node_modules/@modelcontextprotocol/server-sequential-thinking/dist/index.js"
        ]
      },
      "filesystem": {
        "command": "node",
        "args": [
          "./.cursor/CORE/MCP/filesystem/node_modules/@modelcontextprotocol/server-filesystem/dist/index.js",
          "./"	
	],
        "env": {
          "DEBUG": "*"
        }
      },
          
      
    },
    "clientOptions": {
      "connectionTimeout": 10000,
      "reconnectOnDisconnect": true,
      "maxReconnectAttempts": 5,
      "reconnectInterval": 2000,
      "enableCaching": true,
      "cacheTTL": 300
    }
  }